# Core
NODE_ENV=development
PORT=5000
SERVICE_NAME=portfolio-backend
API_BASE=/api/v1

# WebSocket / CORS origins (comma separated)
WS_ORIGINS=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/portfolio

# Auth (Clerk)
CLERK_ISSUER=
CLERK_AUDIENCE=
# Optional override
CLERK_JWKS_URL=

# GCS Uploads
GCS_BUCKET_UPLOADS=
ALLOWED_UPLOAD_MIME=image/png,image/jpeg,image/webp
MAX_UPLOAD_MB=20

# Telemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
SENTRY_DSN=

# Rate limiting
RATE_LIMIT_RPM=120

# Load test script
WS_URL=ws://localhost:5000/api/v1/ws
WS_TOKEN=
CLIENTS=25
DURATION=30
