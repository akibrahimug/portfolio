{
  "name": "portfolio-backend",
  "version": "2.0.0",
  "description": "WebSocket-first, type-safe portfolio backend for Cloud Run",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:ci": "eslint . --ext .ts,.js --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:up": "docker compose up -d mongo",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mongo",
    "db:ps": "docker compose ps",
    "load:test": "ts-node-dev --transpile-only scripts/ws-load-test.ts",
    "migrate": "ts-node-dev --transpile-only scripts/migrate-data.ts"
  },
  "keywords": [],
  "author": "Kasoma Ibrahim",
  "engines": {
    "node": ">= 18.17.0"
  },
  "license": "ISC",
  "dependencies": {
    "@google-cloud/storage": "^7.10.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@sentry/node": "^8.26.0",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.9.6",
    "mongodb-memory-server": "^10.2.0",
    "mongoose": "^8.6.3",
    "uuid": "^9.0.1",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
